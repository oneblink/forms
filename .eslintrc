{
  "extends": ["eslint:recommended", "semistandard"],
  "env": {
    "amd": true,
    "browser": true,
    "mocha": false,
    "node": false
  },
  "globals": {
    "BMP": true,
    /* Web Platform APIs */
    "MediaStreamTrack": false,
  },
  "rules": {
    /* Possible Errors */
    "no-extra-parens": 2,
    "valid-jsdoc": 1, /* TODO: 2 */
    /* Best Practices */
    "block-scoped-var": 2,
    "complexity": [1, 5],
    "default-case": 2,
    "dot-notation": 2,
    "guard-for-in": 2,
    "no-div-regex": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-floating-decimal": 2,
    "no-process-env": 2,
    "no-self-compare": 2,
    "no-void": 2,
    "no-warning-comments": 1, /* TODO: 2 */
    "radix": 2,
    "vars-on-top": 2,
    "wrap-iife": 2,
    /* Node.JS */
    "no-sync": 2,
    /* Stylistic Issues */
    "spaced-comment": 1 /* TODO: drop this eventually */
  }
}
